<div class="ui feed segment">
  <h2 class="ui header">Recent Activity</h2>

  {{#each model}}
    <div class="event">
      <div class="label">
        <img src="http://placehold.it/45x45">
      </div>
      <div class="content">
        <div class="date">
          {{date}}
        </div>
        <div class="summary">
          {{subject}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

