<div class="ui huge breadcrumb">
  {{#link-to "committee.projects" class="section"}}Projects{{/link-to}}
</div>

<div class="ui secondary menu">
  <a class="active item">All Projects</a>
  <a class="item">Pending</a>
  <a class="item">In Progress</a>
  <a class="item">Completed</a>

  <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <input type="text" placeholder="Search...">
        <i class="search link icon"></i>
      </div>
    </div>
  </div>
</div>
<div class="ui divider"></div>


<div class="ui stackable items">
  {{#each model}}
    {{#link-to "committee.projects.project" this class="item" tagName="div"}}
      <div class="image">
        <img src="http://placehold.it/300x200">
        <div class="ui right red corner label">
          <div class="text">New</div>
        </div>
      </div>
      <div class="content">
        <div class="name">{{name}}</div>
        <p class="description">{{description}}</p>
      </div>
    {{/link-to}}
  {{/each}}
</div>